/**
 * Implements hook_forms().
 *
 * All sdm entity forms share the same form handler.
 */
function sdm_forms() {
  $forms = array();
  if ($types = sdm_entity_types()) {
    foreach (array_keys($types) as $type) {
      $forms['sdm_entity_edit_' . $type . '_form']['callback'] = 'sdm_entity_form';
    }
  }
  return $forms;
}

/**
 * Form factory for sdm entity type forms.
 * @param string $type
 *   sdm entity type machine name
 * @param stdClass $entity
 *   The entity to create a form for
 * @param string $op
 *   The operation (add, edit, etc). Not used currently.
 */
function sdm_forms_wrapper($type, $entity, $op='add') {
  if (!isset($entity)) {
    $entity = sdm_default_entity($type);
  }
  else {
    $type = $entity->sdm_entity_type;
  }
  $form = drupal_get_form('sdm_entity_' . $type . '_form', $entity);
  return $form;
}

/**
 * Returns a default sdm entity.
 * @param string $type
 *   The sdm entity type to create.
 * @return SDMEntity $sdm_entity
 *   An instantiated sdm entity, unsaved.
 */
function sdm_default_entity($type) {
  $sdm_entity = new Campaign();
  $sdm_entity->sdm_entity_type = $type;
  $sdm_entity->is_new = TRUE;
  $sdm_entity->module = 'sdm';
  $sdm_entity->data = array();
  return $sdm_entity;
}

/**
 * Access function for the entity.
 * @param string $op
 * @param stdClass $entity (variable for the entity)
 * @param stdClass $account
 * @param string $entity_type
 */
function sdm_entity_access($op, $coolkeys, $account = null, $entity_type = null) {
  if (!isset($account)) {
    global $user;
    $account = $user;
  }
  switch ($op) {
    default: return user_access('administer_sdm_entities');
  }
}

/**
* Load an entity.
*/
function sdm_entity_load($id, $reset = FALSE) {
  $sdm_entities = sdm_entity_load_multiple(array($id), array(), $reset);
  return reset($sdm_entities);
}

/**
* Load multiple entities based on certain conditions.
*/
function sdm_entity_load_multiple($ids = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('sdm_entity', $ids, $conditions, $reset);
}

/**
* Save Structured Data Markup entity.
*/
function sdm_entity_save($sdm_entity) {
 entity_save('sdm_entity', $sdm_entity);
}

/**
* Delete single Structured Data Markup entity.
*/
function sdm_entity_delete($sdm_entity_id) {
  entity_delete('sdm_entity', entity_id('sdm_entity' , $sdm_entity_id));
}

/**
* Delete multiple Structured Data Markup entities.
*/
function sdm_entity_delete_multiple($sdm_enitity_ids) {
  entity_delete_multiple('sdm_entity', $sdm_enitity_ids);
}


/**
 * List of Structured Data Markup Entity Types.
 */
function sdm_entity_types($owner_name = NULL) {
  $sdm_entity_types = entity_load('sdm_entity_type', isset($owner_name) ? array($owner_name) : FALSE, array(), TRUE);
  return isset($owner_name) ? reset($sdm_entity_types) : $sdm_entity_types;
}

/**
 * Load Structured Data Markup Entity Type.
 */
function sdm_entity_type_load($sdm_entity_type) {
  return sdm_entity_types($sdm_entity_type);
}

/**
 * Save Structured Data Markup Entity type entity.
 */
function sdm_entity_type_save($sdm_entity_type) {
  entity_save('sdm_entity_type', $sdm_entity_type);
}

/**
 * Delete single Structured Data Markup Entity type.
 */
function sdm_entity_type_delete($sdm_entity_type) {
  entity_delete('sdm_entity_type', entity_id('sdm_entity_type' ,$sdm_entity_type));
}

/**
 * Delete multiple Structured Data Markup Entity types.
 */
function sdm_entity_type_delete_multiple($sdm_entity_type_ids) {
  entity_delete_multiple('sdm_entity_type', $sdm_entity_type_ids);
}

