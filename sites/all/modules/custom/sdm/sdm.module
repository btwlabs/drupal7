/**
 * Implements hook_entity_info_alter().
 */
function sdm_entity_info_alter(&$entity_info) {
  foreach (sdm_entity_types() as $type => $info) {
    $entity_info['sdm_entity']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/structure/sdm/types/manage/%sdm_type',
        'real path' => 'admin/structure/sdm/types/manage/' . $type,
        'bundle argument' => 5,
      ),
    );
  }
}

